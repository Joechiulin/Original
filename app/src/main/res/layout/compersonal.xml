<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/comperswipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvcommunityper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </android.support.v4.widget.SwipeRefreshLayout>

    <!-- build.gradle (Module:app) must add [com.android.support:design] API -->
    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/compercoordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/communitypersonalAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="400dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_add"
            app:elevation="6dp"
            app:rippleColor="#FFFFFF" />
    </android.support.design.widget.CoordinatorLayout>

</RelativeLayout>
